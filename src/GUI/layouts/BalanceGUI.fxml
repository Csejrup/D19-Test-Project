                <Label contentDisplay="CENTER" layoutX="51.0" lineSpacing="5.0" prefHeight="85.0" prefWidth="177.0" text="Reception" underline="true">
                    <font>
                        <Font name="Dubai Medium" size="40.0" />
                    </font>
                    <textFill>
                  <LinearGradient endX="1.0" endY="1.0">
                     <stops>
                        <Stop color="#c0ecff" />
                        <Stop color="WHITE" offset="1.0" />
                     </stops>
                  </LinearGradient>
                    </textFill>
                </Label>
            <Button fx:id="btnMainMenu" layoutX="112.0" layoutY="473.0" mnemonicParsing="false" onAction="#showMainMenu" style="-fx-background-color: #7cb342;" text="Main Menu" textFill="WHITE">
               <font>
                  <Font name="Dubai Medium" size="25.0" />
               </font>
            </Button>
            <ImageView fitHeight="50.0" fitWidth="52.0" layoutX="25.0" layoutY="479.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Pictures/menu_64px.png" />
               </image>
            </ImageView>

            </children>
        </AnchorPane>
        <AnchorPane layoutX="277.0" prefHeight="59.0" prefWidth="558.0" style="-fx-background-color: #8bc34a;">
            <children>
                <ImageView fitHeight="59.0" fitWidth="62.0" layoutX="500.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@Pictures/settings_32px.png" />
                    </image>
                </ImageView>
            </children>
        </AnchorPane>
        <AnchorPane layoutX="277.0" layoutY="59.0" prefHeight="495.0" prefWidth="559.0" style="-fx-background-color: #FFFFFF;">
         <children>
            <TextField fx:id="amountTextField" layoutX="23.0" layoutY="96.0" promptText="Enter amount">
               <font>
                  <Font name="Dubai Medium" size="15.0" />
               </font>
            </TextField>
            <Label layoutX="49.0" layoutY="31.0" text="Add Balance">
               <font>
                  <Font name="Dubai Medium" size="28.0" />
               </font>
            </Label>
            <Button fx:id="btnOK" layoutX="227.0" layoutY="96.0" mnemonicParsing="false" onAction="#handleAddBalance" prefHeight="38.0" prefWidth="50.0" text="OK">
